'''
    EJEMPLO DE JUEGO DE VENTANAS CON TKINTER. EVENTOS Y DIFERENTES
    COMPONENTES VISUALES
'''

from tkinter import *
from tkinter import messagebox

from time import time

x = 0
y = 0
contador = 0 

tiempo_inicial = time()

def instrucciones():
    print("Haz click en las 5 diferencias")

def click_raton(evento):
    global x, y, contador
    x = evento.x
    y = evento.y
    print("x : " + str(x))
    print("y : " + str(y))
         

    if x >= 12 and x <= 568 and y >= 161 and y <= 215:
        contador += 1
        messagebox.showinfo("Mensaje", "Felicidades, acertaste !" )
        
    elif x >= 832  and x <= 901  and y >= 236  and y <= 276:
        contador += 1
        messagebox.showinfo("Mensaje", "Felicidades, acertaste !" )
        
    elif x >= 896  and x <= 945  and y >= 170  and y <= 213 :
        contador += 1
        messagebox.showinfo("Mensaje", "Felicidades, acertaste !" )
        
    elif x >= 866  and x <= 937  and y >= 29  and y <= 74 :
        contador += 1
        messagebox.showinfo("Mensaje", "Felicidades, acertaste !" )
        
    elif x >= 694  and x <= 788  and y >= 156  and y <= 205 :
        contador += 1
        messagebox.showinfo("Mensaje", "Felicidades, acertaste !" )
        
    else:
        messagebox.showinfo("Mensaje", "No has acertado" )
    
    
    if contador == 5:        
        tiempo_final = time() 
        tiempo_ejecucion = tiempo_final - tiempo_inicial
        #print("\nAcertaste todas las diferencias, has tardado " + str( tiempo_ejecucion ))
        messagebox.showinfo("Mensaje", "Acertaste todas las diferencias, has tardado " + 
                            str( round(tiempo_ejecucion, 2) ) + " segundos" )
    
#end click_raton

#messagebox.showinfo("Mensaje", "Averigua las 5 diferencias")

alert = Tk()
etiqueta = Label(alert, text = "Haz click en las 5 diferencias")
etiqueta.pack(expand = YES , fill = BOTH)
etiqueta.config(fg = "red", bg = "yellow" ,font = ("Arial", 25))
alert.geometry("500x100")
alert.mainloop()




ventana = Tk()
canvas = Canvas(ventana, width = 800, height = 600)
canvas.pack(expand = YES , fill = BOTH)
imagen = PhotoImage(file = "paisaje2.png")
canvas.create_image(0,0,image= imagen, anchor = NW)
ventana.geometry("1050x300")
ventana.title("Pincha para adivinar las diferencias a la derecha")
ventana.bind("<Button 1>", click_raton)
ventana.mainloop()


