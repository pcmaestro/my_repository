class Pantalon():
    
    def __init__(self):
        
        self.codProd= -1
        self.nomProd =""
        self.marca =""
        self.modelo =""
        self.talla =""
        self.color =""
        self.sexo =""
        self.precio = -1

#end class Pantalones


pantalones = Pantalon()
 
pantalones.codProd = input("Indica el c√≥digo de producto : ")
